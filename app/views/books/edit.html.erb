<!DOCTYPE html>
<html>
  <head>
	<title>Bookers</title>
  </head>
  <body>
  	<div class="container">
      	<div class="row">
      		<div class="col-md-6 col-md-offset-3">
      			<h1>Editing Book</h1>
      			<%=form_for(@book) do |f| %>

      			   <h2>Title</h2>
      			   <%= f.text_field :title %>

      			   <h2>Opinion</h2>
      			   <%= f.text_area :body %>

      			   <button type="button" class="btn btn-info btn-block"><%= f.submit 'Update Book' %></button>

      			<% end %>
      			<%= link_to "Show", book_path %> |
      			<%= link_to "Back", books_path %>
      		</div>
      		<div class="col-md-3">
      			
      		</div>
      	</div>
    </div>
    <footer>
    	<div class="container">
    		<div class="row">
    			<div class="col-xs-3 col-xs-offset-9">
    				<p>CopyRight Infratop.inc</p>
    	        </div>
            </div>
        </div>
    </footer>

  </body>
</html>