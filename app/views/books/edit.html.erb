<!DOCTYPE html>
<html>

  <body>
  	<div class="container">
      	<div class="row">
      		<div class="col-md-6 col-md-offset-3">
      			<h1>Editing Book</h1>
      			<%=form_for(@book) do |f| %>

               <% if @book.errors.any? %>
                  <%= @book.errors.count %>件のerrorが発生しました
                  <% @book.errors.full_messages.each do |message| %>
                    <%= message %>
                  <% end %>
               <% end %>

      			   <h2>Title</h2>
      			   <%= f.text_field :title %>

      			   <h2>Opinion</h2>
      			   <%= f.text_area :body %>

      			   <%= f.submit  'Update Book', class:"btn btn-primary btn-block" %>

      			<% end %>
      			<%= link_to "Show", book_path %> |
      			<%= link_to "Back", books_path %>
      		</div>
      		<div class="col-md-3">
      			
      		</div>
      	</div>
    </div>
  </body>
</html>