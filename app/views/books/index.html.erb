<!DOCTYPE html>
<html>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <%= link_to edit_user_path(@user) do %>
            <button type="button" class="btn btn-default btn-block"> <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
          <% end %>


          <h2>New book</h2>
          <%= form_for(@book) do |f| %>

            <% if @book.errors.any? %>
               <%= @book.errors.count %>件のerrorが発生しました
               <% @book.errors.full_messages.each do |message| %>
                   <%= message %>
               <% end %>
            <% end %>

            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %>

            <%= f.submit  'Create Book', class:"btn btn-primary btn-block" %>
          <% end %>
        </div>

        <div class="col-xs-9">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
      			  	<th>Title</th>
      				  <th>Opinion</th>
      				  <th colspan="3"></th>
   				    </tr>
 		        </thead>
            <% @books.each do |book| %>
 		         <tbody>
               <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
                <% end %>
               </td>
               <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
               </td>
               <td><p class="book_body"><%= book.body %></p></td>
               <td>
                <div id="favorites_buttons_<%= book.id %>">
                  <%= render partial: 'favorites/favorite', locals: { book: book} %>
                </div>
               </td>
               <td>
                 コメント数: <%= book.book_comments.count %>
               </td>
 		         </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>

