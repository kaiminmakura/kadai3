<!DOCTYPE html>
<html>

  <body>
    <div class="container">
      <div class="row">
        <h2>User info</h2>
  	    <%= form_for(@user) do |f| %>

        <% if @user.errors.any? %>
            <%= @user.errors.count %>件のerrorが発生しました
            <% @user.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
        <% end %>

        <div>

  	      <h4>Name</h4>
  	      <%= f.text_field :name %>

  	      <h4>Introduction</h4>
  	      <%= f.text_area :introduction %>

        </div>
        <div>
          <div>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          </div>
          <h4>Image</h4>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  	      <%= f.submit "Update User" %>
        </div>

  	    <% end %>
    </div>
   </div>
  </body>
</html>